@model TODO.Models.LogOnModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title>TODO</title>
		<meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap.min.css")" />
		<link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" />
        <link rel="stylesheet" href="@Url.Content("~/Content/css/unicorn.login.css")" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /></head>
    <body>
        <div id="logo">
            <img src="@Url.Content("~/Content/img/logo.png")" alt="" />
        </div>
        <div id="loginbox">            
            @using (Html.BeginForm())
            {
				<p>请输入用户名密码登录.</p>
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span>
                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "请输入用户名" })
                            @*<input type="text" placeholder="请输入用户名" />*@
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            @Html.PasswordFor(m => m.Password)
                            @*<input type="password" placeholder="" />*@
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <span class="pull-right"><input type="submit" class="btn btn-inverse" value="登录" /></span>
                </div>
            }
        </div>
        
        <script src="@Url.Content("~/Content/js/jquery.min.js")"></script>  
        <script src="@Url.Content("~/Content/js/unicorn.login.js")"></script> 
    </body>
</html>
